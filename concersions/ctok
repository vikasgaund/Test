/* Programme or Service to convert Celsius to Kelvin Tempratures, We can call the same method from Service or API to get return converted temparature */

import java.io.BufferedReader;
import java.io.JavaIOException;
import java.io.InputStreamReader;

public class ConvertCelciusToKelvin {

  public static void main (String[] agrs) throws NumberFormatException, IOException {
  
  Float kelvin = 0; //kelvin declared 0 initially 
  BufferedReader br; //Reader declared
  System.ot.println("Please enter the Temparature in Celsius:"); //Took the input
  br = new BufferedReader(new InputStreamReader(System.in));
  Float celsius = Float.parseFloat(br.readLine()); //Celsius value picked up from input  
  kelvin = celsius + 273.15F ; // celcius to kelvin conversion
  System.out.println("Kelvin: "+kelvin)
  
  }
  
